{
  "manifest_version": 3,
  "name": "Extension for Dummies",
  "description": "Summarizes each paragraph and displays a block of text next to it.",
  "version": "1.0",
  "permissions": [
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "Dummy.jfif"
  }
}